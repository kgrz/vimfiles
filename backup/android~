CREATE PROJECT 
  android list targets # android is in the sdk/tools
  android create project --target <target-id> --name MyFirstApp \
  --path <path-to-workspace>/MyFirstApp --activity MyActivity \
  --package com.example.myfirstapp
  ex : 
  ../../SDK/android-sdk-linux/tools/android create project --target android-22 --name App1   --path ~/Software/Android/2015/App1 --activity MainActivity   --package com.example.app1


BUILD PROJECT 
  ant release # the apk is under bin 
  ant debug


SIGN 
  keytool -genkey -v -keystore my-release-key.keystore
  -alias alias_name -keyalg RSA -keysize 2048 -validity 10000


RUN 
  android avd # emulator 
  adb -d install path/to/your/app.apk # on device 
