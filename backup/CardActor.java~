package com.mygdx.gdx2.Classes;

import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.graphics.Pixmap;
import com.badlogic.gdx.graphics.Pixmap.Format;
import com.badlogic.gdx.graphics.Texture;
import com.badlogic.gdx.graphics.g2d.TextureAtlas;
import com.badlogic.gdx.scenes.scene2d.ui.Image;
import com.badlogic.gdx.scenes.scene2d.ui.Label;
import com.badlogic.gdx.scenes.scene2d.ui.Skin;
import com.badlogic.gdx.scenes.scene2d.ui.Table;
import com.badlogic.gdx.scenes.scene2d.ui.TextArea;




public class CardActor extends Table{
  Skin skin; 
  Table mainTable, headTable, middleTable, tailTable; 
  TextArea textArea; 
  Label label; 
  Image image; 
  Image borderImage; 
  Image borderImage2; 
  Image borderImage3; 
  Image borderImage4; 


  public CardActor(){
    CreateExample(); 
  }

  public void CreateExample(){

    skin = new Skin(Gdx.files.internal("json/main.json") , new TextureAtlas("img/ui/white32_pa.atlas") ); 
    image     = new Image(new Texture( Gdx.files.internal("img/gal/hs.png")) ); 
    label     = new Label("Hello, this is the \n  cfht card", skin); 
    label.setFontScale(0.2);


    // BORDER
    Pixmap pixmap = new Pixmap(1,1,Format.RGBA8888); 
    pixmap.setColor(0,0,1,1); 
    pixmap.fill();
    Texture texture = new Texture(pixmap); 
    borderImage = new Image(texture);
    borderImage2 = new Image(texture);
    borderImage3 = new Image(texture);
    borderImage4 = new Image(texture);
    //borderImage.setFillParent(true);  



    headTable = new Table(); 
    //headTable.setFillParent(true);
    //headTable.add(borderImage);

    middleTable = new Table(); 
    //middleTable.setFillParent(true);
    middleTable.add(image).width(100).height(100).fill();
    middleTable.row(); 
    middleTable.add(label).width(100).height(100).fill();
    middleTable.row(); 

    tailTable = new Table(); 
    //tailTable.setFillParent(true);
    //tailTable.add(borderImage2); 




    this.row(); 
    this.add(borderImage).height(2).width(100).colspan(3);  // top border 
    this.row();
    this.add(borderImage3).height(200).width(2); // left border 
    this.add(middleTable).height(200).width(100);
    this.add(borderImage4).height(200).width(2); // right border 
    this.row(); 
    this.add(borderImage2).height(2).width(100).colspan(3); 
    this.row(); 
    this.debug();

  }


}
