#!/bin/sh

#Variables d'environnement indispensables
dbus=$(ps -u tourneboeuf e | grep -Eo 'dbus-daemon.*adress=unix:abstract=/tmp/dbus-[A-Za-z0-9]{10}' | tail -c35)


avertir()
{
  local titre="$1"
  local corps="$2"
  local icone=$3
  notify-send "<big>$titre</big>" "$corps" --icon=$icone -t 10000
  espeak "$titre" -v french -s 130 -p 80
  sleep 3 
}
